{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "reveal": "always",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "Cmake",
            "args": ["-G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."] 
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "args": ["-j 8"],
            "group": {
                "kind": "build",
                "isDefault": true
            }   
        }
    ]
}